# Database
DATABASE_URL=postgresql://user:password@localhost:5432/tictactoe_bnb

# Server
PORT=3001
NODE_ENV=production

# BNB Chain Configuration
BSC_RPC_URL=https://bsc-dataseed.binance.org/
# Alternative RPC endpoints:
# BSC_RPC_URL=https://bsc-dataseed1.binance.org/
# BSC_RPC_URL=https://bsc-dataseed2.binance.org/
# BSC_RPC_URL=https://bsc.publicnode.com

# Game Wallet (Escrow)
# This wallet holds player deposits during games and processes payouts
# Generate a new wallet for production use
GAME_WALLET_PRIVATE_KEY="0x_YOUR_PRIVATE_KEY_HERE"

# Treasury Wallet
# This wallet receives platform fees (3% on wins, 1% on draws)
BSC_TREASURY_WALLET_ADDRESS="0x_YOUR_TREASURY_ADDRESS_HERE"

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Optional: BSC Testnet for testing
# BSC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
# Use testnet faucet: https://testnet.bnbchain.org/faucet-smart